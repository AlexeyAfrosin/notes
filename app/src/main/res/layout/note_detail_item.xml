<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:autofillHints="@string/note_name_placeholder"
        android:inputType="textMultiLine"
        android:labelFor="@+id/et_name"
        android:maxLines="2"
        tool:text="@string/note_name_placeholder" />

    <TextView
        android:id="@+id/tv_date_created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:text="@string/tv_date_created" />

    <DatePicker
        android:id="@+id/dp_date_created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:calendarViewShown="false"
        android:clickable="false"
        android:datePickerMode="spinner" />

    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:autofillHints="@string/note_text_placeholder"
        android:inputType="textMultiLine"
        android:labelFor="@+id/et_text"
        android:maxLines="10"
        tool:text="@string/note_text_placeholder" />

</LinearLayout>